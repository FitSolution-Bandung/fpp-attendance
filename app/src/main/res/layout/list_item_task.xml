<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardElevation="2dp"
        card_view:contentPadding="10dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/btnPinTask"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_img_transparent_selector"
                        android:padding="10dp"
                        android:src="@drawable/ic_pin_black"
                        android:tint="#AAA" />

                    <TextView
                        android:id="@+id/txvTaskName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="Task Name"
                        android:textColor="@color/theme_primary_medium" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txvProjectName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="bottom"
                        android:text="Project Name "
                        android:layout_marginLeft="40dp"
                        android:textColor="@color/theme_primary_medium"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/txvDeadlineTask"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Deadline Task"
                        android:layout_marginLeft="40dp"
                        android:textStyle="italic"
                        android:textColor="@color/android_red_dark"
                        android:textSize="10sp" />
                    <TextView
                        android:id="@+id/txvStageTask"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Stage : Ongoing"
                        android:layout_gravity="right"
                        android:textColor="#777"
                        android:padding="5dp"/>


                    <!--<ImageView
                        android:id="@+id/imgProjectIsFavorite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/ic_star_border_black_24dp"
                        android:tint="#777" />-->
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>



</LinearLayout>