<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="rectangle">
            <corners android:radius="30dp" />
            <gradient android:type="linear" android:angle="90"
                android:startColor="#BBB" android:endColor="#FFF"/>
        </shape>
    </item>
    <item
         android:top="3dp"
        android:right="3dp"
        android:bottom="3dp"
        android:left="3dp">
        <shape
            android:shape="rectangle">
            <corners android:radius="30dp" />
            <gradient android:type="linear" android:angle="90"
                android:endColor="#BBB" android:startColor="#FFF"/>
        </shape>
    </item>
</layer-list>